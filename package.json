{
	"name": "mkindexer",
	"displayName": "MkIndexer",
	"description": "Indexer of Makefiles",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:mkindexer.runIndexer",
		"onLanguage:makefile"
	],
	"author": {
		"name": "Sergey V. Kravchenko",
		"email": "kravserg1032@gmail.com",
		"url": "https://github.com/Serj1032/MakefileIndexer"
	},
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mkindexer.runIndexer",
				"title": "Run Indexer"
			}
		],
		"configuration": [
			{
				"title": "MkIndexer properties",
				"properties": {
					"mkindexer.MakefilePath": {
						"type": "string",
						"default": "",
						"description": "Relative path to Makefile"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.53.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}